<h1><%= @place["name"] %></h1>

<h2 class="mb-4">My Entries</h2>

<div class="row">
  <% @entries.each do |entry| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">

        <% if entry.uploaded_image.attached? %>
          <img src="<%= url_for(entry.uploaded_image) %>" class="card-img-top" alt="Uploaded image">
        <% end %>

        <div class="card-body">
          <h5 class="card-title"><%= entry["title"] %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= entry["occurred_on"] %></h6>
          <p class="card-text"><%= entry["description"] %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<a class="btn btn-primary me-2" href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
<a class="btn btn-secondary" href="/places">Back to All Places</a>